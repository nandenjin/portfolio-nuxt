    "@nuxtjs/composition-api": "^0.16.4",
    "@nuxtjs/sitemap": "^2.4.0",
    "normalize.css": "^8.0.1",
    "nuxt": "^2.13.2"
  },
  "devDependencies": {
    "@nuxt/typescript-build": "^2.0.3",
    "@nuxtjs/eslint-config-typescript": "^2.0.0",
